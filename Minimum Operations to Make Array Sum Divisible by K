//Leetcode: https://leetcode.com/problems/minimum-operations-to-make-array-sum-divisible-by-k/description/?envType=problem-list-v2&envId=array

class Solution {
    public int minOperations(int[] nums, int k) {
        
        int sol = 0;
        int sum = 0;

        for(int i=0; i<nums.length; i++){
            sum = (sum + nums[i])%k;
        }

        return (sum % k) ;
    }
}
