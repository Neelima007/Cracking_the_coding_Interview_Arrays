//https://leetcode.com/problems/container-with-most-water/?envType=daily-question&envId=2026-01-12

class Solution {
    public int maxArea(int[] height) {

        int length = height.length;
        int left = 0;
        int right = length - 1;
        int maxArea = 0;

        while(left < right){
           
                int currArea = (right - left) * Math.min(height[right],height[left]);
                if(currArea > maxArea){
                    maxArea = currArea;}
                   
                if(height[left] > height[right]){right--;}
                else{
                    left++;
                }   
        }

        return maxArea;
        
    }
}

