//https://leetcode.com/problems/left-and-right-sum-differences/?envType=problem-list-v2&envId=array

class Solution {
    public int[] leftRightDifference(int[] nums) {

       int rightsum = 0;
       int leftsum = 0;

        for(int i = 0; i < nums.length; i++){
            rightsum  = rightsum + nums[i];
        }

        for(int j = 0; j < nums.length; j++){
            int temp = nums[j];
            rightsum = rightsum - nums[j];
            nums[j] = Math.abs(leftsum - rightsum);
            leftsum = leftsum + temp;
        }

        return nums;   
    }
}
